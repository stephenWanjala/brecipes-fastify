generator client {
  provider = "prisma-client-js"
  // output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  apiKey    ApiKey?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  recipes   Recipe[]
}

model ApiKey {
  id        String   @id @default(uuid())
  key       String   @unique
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id              String   @id @default(uuid())
  title           String
  description     String
  cuisine         String
  image           String?
  sourceUrl       String?
  chefName        String
  preparationTime String
  cookingTime     String
  serves          String
  ingredientsDesc String[]
  ingredients     String[]
  method          String[]
  createdBy       User     @relation(fields: [userId], references: [id])
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
